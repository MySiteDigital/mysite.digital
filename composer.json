{
  "name": "mysite.digital",
  "type": "project",
  "license": "MIT",
  "description": "MySite Digital website repository",
  "homepage": "https://github.com/MySiteDigital/mysite.digital",
  "authors": [
    {
      "name": "Shane Watters",
      "homepage": "https://github.com/labcat"
    }
  ],
  "keywords": [
    "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.1",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^3.4.0",
    "oscarotero/env": "^1.2.0",
    "roots/wordpress": "5.2.2",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4.2",
    "roave/security-advisories": "dev-master"
  },
  "extra": {
    "installer-paths": {
      "public/assets/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/assets/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/assets/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "public/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
